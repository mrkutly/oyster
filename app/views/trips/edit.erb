<h1>Editing Trip</h1>

<%= form_for @trip do |f| %>
  <%= f.hidden_field :user_id, value: @user.id %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :description   %>
  <%= f.text_field :description %>
  <br>
  <%= f.label :favorite %>
  <%= f.check_box :favorite%>
  <br>
  <%= f.submit %>
<% end %>
<%= button_to "Delete", delete_trip_path(@trip), method: :delete, data: { confirm: "Are you sure?" } %>
