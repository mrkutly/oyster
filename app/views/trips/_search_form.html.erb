

  <%= form_tag "/trips/:id", method: "get" do %>
      <%= text_field_tag "trip[name]", "", list: "trips", class: "search-bar" %>

      <datalist id="trips">
        <% @trips.each do |trip| %>
          <option value="<%= trip.name %>"></option>
        <% end %>
      </datalist>

    <%= submit_tag "Go", class: "btn btn-purple" %>
  <% end %>
