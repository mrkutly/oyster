<%= form_for @trip, :html => {:class => "form-horizontal center"} do |f| %>

  <%= f.hidden_field :user_id, value: @user.id %>
  <div class="form-row align-items-center">

    <div class="col-auto">
      <%= f.text_field :name, class: "form-control mb-2", placeholder: "Trip Name"%>
    </div>

    <div class="col-auto">
      <%= f.text_field :description, class: "form-control mb-2", placeholder: "Trip Description" %>
    </div>

    <div class="col-auto">
      <%= f.check_box :favorite, class: "form-check-label", id: "autoSizingCheck" %>
      <%= f.label "Favorite", class: "col-md-4 control-label" %>
    </div>

    <div class="col-auto">
      <%= f.submit "Create Trip", class: "btn btn-default btn-primary" %>
    </div>
    
  </div>
<% end %>
