<div class="bottom-margin">
  <div class="oyster-img">
    <img src="http://cdn2.bigcommerce.com/server2100/qh7fa6/products/103/images/336/oyster-hi-res__72926.1375356631.680.453.jpg?c=2" alt="oyster">
    <div class="oyster-img-text">
      <h1>Welcome to Oyster</h1>
      <h6>a travel diary</h6>
    </div>

  </div>

  <div class="container">
    <div class="row border-between">

      <div class="login col-md-6">
        <% if flash[:notice] %>
          <div class="alert flash bottom-margin">
              <%= flash[:notice] %>
          </div>
        <% end %>

        <%= render 'sessions/login_form' %>
      </div>

      <div class="sign-up col-md-6">
        <% if @user.errors.any? %>
          <div class="alert flash">
            <% @user.errors.full_messages.each do |message| %>
              <%= message %>
              <br>
            <% end %>
          </div>
        <% end %>
        <%= render 'users/new_user_form' %>
      </div>

    </div>
  </div>

</div>
