<%= form_for @journal_entry do |f| %>
  <%= f.hidden_field :trip_id, value: @trip.id %>
  <%= f.label :title %> <br>
  <%= f.text_field :title %> <br>
  <br>
  <%= f.label :content %> <br>
  <%= f.text_area :content, class: "journal-content"%> <br>
  <br>
  <%= f.submit "Save", class: "btn-purple" %>
<% end %>
