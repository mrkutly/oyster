<!DOCTYPE html>
<html>
<head>
  <title>Oyster</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<header>
    <nav class="navbar navbar-light bg-light">

        <a class="navbar-brand" href="<%= home_path(current_user) if logged_in? %>" >
          <img src="/assets/Oyster-icon.png" width="30" height="30" class="d-inline-block align-top" alt="Oyster logo">
          Oyster: the world is yours
        </a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">

              <% if logged_in? %>
                  <h6><%= link_to "Home", home_path(current_user), class: "nav-item nav-link" %></h6>
                  <h6><%= link_to "Logout", logout_path, method: 'delete', class: 'nav-item nav-link' %></h6>
              <% else %>
                <h6><%= link_to "Login", login_path, method: 'get', class: "nav-item nav-link" %></h6>
              <% end %>

          </div>
        </div>
      </div>

    </nav>
</header>



<body>


  <%= yield %>

</body>
</html>
