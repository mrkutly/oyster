<!DOCTYPE html>
<html>
<head>
  <title>Oyster</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">

        <a class="navbar-brand" href="/" >
          <img src="/assets/Oyster-icon.png" width="30" height="30" class="d-inline-block align-top" alt="">
          Oyster: the world is yours
        </a>
        <div class="container">
          <div class="row">
            <ul class="navbar-nav">
              <% if logged_in? %>
                <div class="col-sm">
                  <li class="nav-item">
                    <%= link_to "Home", home_path(current_user), class: "navbar-link" %>
                  </li>
                </div>
                <div class="col-sm">
                  <li class="nav-item">
                    <%= link_to "Logout", logout_path, method: 'delete', class: 'navbar-link' %>
                  </li>
                </div>
              <% else %>
                <div class="col-sm">
                  <li class="nav-item">
                    <%= link_to "Login", login_path, method: 'get' %>
                  </li>
                </div>  
              <% end %>
            </ul>
          </div>
        </div>
    </nav>
</header>



<body>


  <%= yield %>

</body>
</html>
